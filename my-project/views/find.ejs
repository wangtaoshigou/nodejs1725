<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>商品添加页面</title>
	<link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/goods.css">
    <script type="text/javascript" src="/javascripts/jquery-1.11.1.js"></script>
</head>
<body>
	<div id="content">
    	<div id="gl">
    		<span class="span1">ECSHOP管理中心</span>
    		<span class="span1"> - 添加新商品</span>
    		<a href="#"><img src="/images/jnsy.png"></a>
    		<a href="/addgoods" id="splb">商品列表</a>
    	</div>
    	<form id="spfl">
    		<img src="/images/icon_search.gif">
    		<select>
    			<option>所有分类</option>
    		</select>
    		<select>
    			<option>所有品牌</option>
    		</select>
    		<select>
    			<option>全部</option>
    		</select>
    		<select>
    			<option>全部</option>
    		</select>
    		关键字
    		<input type="text" name="" id="kword">
    		<input type="button" name="" value="搜索" class="btn" id="sousuo" onclick="findd()">
    	</form>
    	<form id="shoplist">
    		<div id="box">
    			<table id="ntab">
    				<tbody>
    					<tr>
    						<th>
    							<input type="checkbox" name="">
    							<a href="#">编号</a>
    						</th>
    						<th><a href="#">商品名称</a></th>
    						<th><a href="#">货号</a></th>
    						<th><a href="#">价格</a></th>
    						<th><a href="#">上架</a></th>
    						<th><a href="#">精品</a></th>
    						<th><a href="#">新品</a></th>
    						<th><a href="#">热销</a></th>
    						<th><a href="#">推荐排序</a></th>
    						<th><a href="#">库存</a></th>
    						<th><a href="#">虚拟数量</a></th>
    						<th><a href="#">操作</a></th>
    					</tr>
    					<tr>
    						<td>
    							<input type="checkbox" name="">
    							284
    						</td>
    						<td>土流壁</td>
    						<td>233</td>
    						<td>999.00</td>
    						<td><img src="/images/yes.gif"></td>
    						<td><img src="/images/yes.gif"></td>
    						<td><img src="/images/yes.gif"></td>
    						<td><img src="/images/yes.gif"></td>
    						<td>100</td>
    						<td>1</td>
    						<td>0</td>
    						<td>
    							<a href="#">
    								<img src="images/icon_view.gif">
    							</a>
    							<a href="#">
    								<img src="images/icon_edit.gif">
    							</a>
    							<a href="#">
    								<img src="images/icon_copy.gif">
    							</a>
    							<a href="#">
    								<img src="images/icon_trash.gif">
    							</a>
    						</td>
    					</tr>
                        <% for( var i = 0 ; i < list.length ; i++) { %>
                            <tr>
                            <td>
                                <input type="checkbox" name="">
                                <%= i+1 %>
                            </td>
                            <td><%= list[i].goods_name %></td>
                            <td>233</td>
                            <td><%= list[i].price %></td>
                            <td><img src="/images/yes.gif"></td>
                            <td><img src="/images/yes.gif"></td>
                            <td><img src="/images/yes.gif"></td>
                            <td><img src="/images/yes.gif"></td>
                            <td>100</td>
                            <td>1</td>
                            <td>0</td>
                            <td>
                                <a href="#">
                                    <img src="images/icon_view.gif">
                                </a>
                                <a href="#">
                                    <img src="images/icon_edit.gif">
                                </a>
                                <a href="#">
                                    <img src="images/icon_copy.gif">
                                </a>
                                <a href="#" onclick="del('<%=list[i]._id%>')">
                                    <img src="images/icon_trash.gif">
                                </a>
                            </td>
                        </tr>
                        <% } %>
    				</tbody>
    			</table>
    		</div>
    	</form>
        <% if(pageNo>1) {%>
        <a href="/goods?pageNo=<%= pageNo-1 %>&count=<%= count%>">上一页</a>
        <%}%>
        <a href="/goods?pageNo=<%= pageNo+1 %>&count=<%= count%>">下一页</a>
    </div>
</body>
</html>
<script type="text/javascript">
    function del(gid){
        $.ajax({
            url: "/api/goods_del",
            type: "get",
            data: {
                gid: gid
            },
            success: function(res){
                console.log(res);
                if(res.status == 1){
                    location.reload(true);
                }else{
                    alert(res.message);
                }
            }
        })
    }
    function findd(){
        $.ajax({
            url: "/goods",
            type: "get",
            data: {
                kword: $("#kword").val() 
            },
            success: function(res){
              
            }
        })
    }
</script>